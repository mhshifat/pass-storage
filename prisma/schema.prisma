generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum ConnectionType {
  EXCEL
}

model Connection {
  id              Int             @unique  @default(autoincrement())
  created_at      DateTime        @default(now())
  updated_at      DateTime        @updatedAt

  name            String
  description     String?
  type            ConnectionType
  metadata        Json?

  projects        Project[]

  @@map("connections")
  @@index([name])
  @@index([type])
}

enum ProjectDatasource {
  EXCEL
}

model Project {
  id              Int             @unique  @default(autoincrement())
  created_at      DateTime        @default(now())
  updated_at      DateTime        @updatedAt

  name            String
  description     String?
  datasource      ProjectDatasource
  metadata        Json?

  connectionId    Int?
  connection      Connection? @relation(fields: [connectionId], references: [id], onDelete: SetNull)

  tableGroups     ProjectTableGroup[]

  @@map("projects")
  @@index([name])
  @@index([datasource])
}

model ProjectTableGroup {
  id              Int             @unique  @default(autoincrement())
  created_at      DateTime        @default(now())
  updated_at      DateTime        @updatedAt

  name            String
  columns         String[]

  projectId    Int?
  project      Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)


  @@map("project_table_groups")
  @@index([name])
  @@unique([projectId, name])
}