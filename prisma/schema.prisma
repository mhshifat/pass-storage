generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum ConnectionType {
  EXCEL
}

model Connection {
  id              Int             @unique  @default(autoincrement())
  created_at      DateTime        @default(now())
  updated_at      DateTime        @updatedAt

  name            String
  description     String
  type            ConnectionType
  metadata        Json?

  @@map("connections")
  @@index([name])
  @@index([type])
}